extends ../layout

block content
  .login-container
    .panel
      .panel-heading
        h3.panel-title Create an account
      .panel-body
        if locals.errors
          .alert.alert-danger(role='alert')
            for error in locals.errors
              div= error.msg
        form(method='post')
          .form-group
            label.control-label(for='name') Name
            input.form-control(type='text', name='name', id='name', placeholder='Name', autofocus=true)
          .form-group
            label.control-label(for='email') Email
            input.form-control(type='email', name='email', id='email', placeholder='Email')
          .form-group
            label.control-label(for='password') Password
            input.form-control(type='password', name='password', id='password', placeholder='Password')
          .form-group
            small.text-muted By signing up, you agree to the <a href="/">Terms of Service</a>.
          .form-group
            button.btn.btn-success(type='submit') Create an account

        .hr-title
          abbr or

        .text-center
          a.btn.btn.btn-facebook(href='/auth/facebook') Sign in with Facebook
          | &nbsp;
          a.btn.btn.btn-twitter(href='/auth/twitter') Sign in with Twitter
          | &nbsp;
          a.btn.btn.btn-google(href='/auth/google') Sign in with Google
    br
    p.text-center Already have an account?
      |&nbsp;
      a(href='/signup')
        strong Log in
