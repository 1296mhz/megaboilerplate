extends ../layout

block content
  .page-content.vertical
    .panel.panel-login
      .panel-body
        h3 Log In
        br
        form(method='POST')
          .form-group
            label.control-label(for='email') Email
            input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus=true)
          .form-group
            label.control-label(for='password') Password
            input.form-control(type='password', name='password', id='password', placeholder='Password')
          .form-group
            a(href='/forgot')
              strong Forgot your password?
          .form-group
            button.btn.btn-success(type='submit') Log in
          .hr-title
            abbr or
          .text-center
            a.btn.btn.btn-facebook(href='/auth/facebook') Sign in with Facebook
            | &nbsp;
            a.btn.btn.btn-twitter(href='/auth/twitter') Sign in with Twitter
            | &nbsp;
            a.btn.btn.btn-google(href='/auth/google') Sign in with Google
    br
    p.text-center Don't have an account yet?
      |&nbsp;
      a(href='/signup')
        strong Sign up!
