extends layout

block content
  if messages.success
    div(style='border: 2px solid #29b35b')
      for success in messages.success
        div= success.msg
  if messages.error
    div(style='border: 2px solid #b61b17')
      for error in messages.error
        div= error.msg

  h3 Contact Form

  form(method='POST')
    label(for='name') Name
    input(type='text', name='name', id='name', autofocus)
    label(for='email') Email
    input(type='email', name='email', id='email')
    label(for='message') Body
    textarea(name='message', id='message', rows='7')
    button(type='submit') Send
