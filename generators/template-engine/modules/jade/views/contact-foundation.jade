extends layout

block content
  .row
    .medium-8.medium-offset-2.columns
      .card
        if messages.success
          .callout.success(role='alert')
            for success in messages.success
              div= success.msg
        if messages.error
          .callout.alert(role='alert')
            for error in messages.error
              div= error.msg

        h3.card-title Contact Form
        form(method='POST')
          label(for='name') Name
          input(type='text', name='name', id='name', autofocus)

          label(for='email') Email
          input(type='email', name='email', id='email')

          label(for='message') Body
          textarea(name='message', id='message', rows='7')

          button.button.success(type='submit') Send
