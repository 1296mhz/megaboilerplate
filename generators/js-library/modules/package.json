{
  "name": "<%= name %>",
  "version": "1.0.0",
  "description": "<%= description %>",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib dist coverage",
    "build": "babel src --out-dir lib",
    "build:umd": "webpack src/index.js dist/<%= name %>.js",
    "build:umd:min": "cross-env NODE_ENV=production webpack src/index.js dist/<%= name %>.min.js",
    "lint": "eslint src test examples",
    "test": "mocha --compilers js:babel-register --recursive",
    "test:watch": "npm test -- --watch",
    "test:cov": "babel-node ./node_modules/isparta/bin/isparta cover ./node_modules/mocha/bin/_mocha -- --recursive",
    "prepublish": "npm run clean && npm run lint && npm run test && npm run build && npm run build:umd && npm run build:umd:min"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/<%= username %>/<%= repo %>.git"
  },
  "keywords": [

  ],
  "author": "<%= author %>",
  "license": "<%= license %>",
  "bugs": {
    "url": "https://github.com/<%= username %>/<%= repo %>/issues"
  },
  "homepage": "https://github.com/<%= username %>/<%= repo %>",
  "dependencies": {

  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.4",
    "babel-eslint": "^6.0.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "cross-env": "^1.0.7",
    "eslint": "^2.5",
    "chai": "^3.5.0",
    "isparta": "^4.0.0",
    "mocha": "^2.4.5",
    "rimraf": "^2.5.2",
    "webpack": "^1.12.14"
  }
}
